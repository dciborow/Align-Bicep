{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "src",

    // Relax strict type-checking
    "strict": false, // Turn off all strict type-checking options
    "noImplicitReturns": false, // Allow functions to not return a value from all paths
    "noFallthroughCasesInSwitch": false, // Allow fallthrough cases in switch statements
    "noUnusedParameters": false, // Allow unused parameters
    "noUnusedLocals": false, // Allow unused local variables
    "noImplicitAny": false, // Allow implicit any types

    // Module resolution
    "esModuleInterop": true, // Keep this for better module compatibility
    "forceConsistentCasingInFileNames": true, // Keep this to prevent case-sensitivity issues
    
    // Incremental builds for faster compilation
    "incremental": true,

    // Skip type-checking of declaration files for faster builds
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
